<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.seif.seshatplayer.MainActivity">

    <FrameLayout
        android:id="@+id/fragment_replacement"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <ImageButton
        android:id="@+id/imagebutton_moreInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/moreinfo"
        android:paddingTop="@dimen/activity_actionbar_margin"
        android:elevation="@dimen/btn_shadow"
        android:translationZ="@dimen/btn_z"
         />
</RelativeLayout>
